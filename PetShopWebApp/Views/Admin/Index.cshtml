
@model List<Animal>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/AdminStyle/AdminStyleSheet.css" />
<script src="~/scripts/AdminScripts/AdminIndex.js"></script>
<div id="new-animal">
    <a id="btn-add-new" href="/Admin/Add">Add New Animal</a>
</div>
<div id="drop-down-category">
    <select id="cat">
        <option disabled selected>Select Category</option>
        @foreach (var cat in ViewBag.Categories)
        {
            <option value="@cat.CategoryId">@cat.CategoryName</option>
        }
    </select>
    <a id="btn-submit" data-url-prefix="@Url.Action("Category")">Submit</a>
</div>
<div class="admin">
    @foreach (var an in Model)
    {
        await Html.RenderPartialAsync("AdminCatalogPartial", an);
    }
</div>

