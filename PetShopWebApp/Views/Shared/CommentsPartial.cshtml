@model Comment

<script src="~/lib/jquery/jquery.js"></script>
<script src="~/lib/validation/jquery.validate.min.js"></script>
<script src="~/lib/validation/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<link rel="stylesheet" href="~/css/CommentsPartialStyleSheet.css" />

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<form id="algin-form" method="post" asp-action="AddComment">
    @Html.HiddenFor(c=>c.AnimalId)
    <div class="form-group">
        <h4 id="label">Leave a comment</h4>
        @Html.LabelFor(c=>c.CommentInfo, new { @class = "label" })
        @Html.EditorFor(c=>c.CommentInfo,new {@class = "form-control" })
        <br />
        @Html.ValidationMessageFor(c => c.CommentInfo, "", new { @class = "wrong" })
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.WriterName,new { @class = "label" })
        @Html.EditorFor(c => c.WriterName, new { @class = "form-control"})
        <br />
        @Html.ValidationMessageFor(c => c.WriterName, "", new { @class = "wrong" })
    </div>
    <div class="form-group"> 
        <button type="submit" id="post" class="btn">Add Comment</button> 
    </div>
</form>

